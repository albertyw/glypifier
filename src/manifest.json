{
	"manifest_version": 2,

	"name": "Glypifier",
	"description": "Button to use Glype proxy to access the current web page",
	"version": "1.0",
	"background": {
		"persistent": false,
		"scripts": ["glypescript.js"]
	},
	"options_page": "options.html",
	"browser_action": {
		"default_icon": "icon.png"
	},
	"permissions": [
		"tabs",
		"http://*/*",
		"storage"
	]
}
